<div class="container">
  <div class="card col-3 justify-content-right m-4">
  <%= link_to 'Create a Movie List', new_list_path, class:"btn btn-success" %>
  </div>
  <div class="cards m-3">
  <% @lists.each do |list| %>
<%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>


    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.picture %>)">
      <%= link_to list.name, list_path(list), class:"text-white" %>
    </div>

  <% end %></div>


</div>
